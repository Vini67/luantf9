{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": [
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "resources/*"
            ]
        }
    },
    "include": [
        "resources",
        "resources/**/*"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}